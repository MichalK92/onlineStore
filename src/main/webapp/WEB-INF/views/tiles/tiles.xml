	<!-- RegisterUser 404 -->
	<definition name="registerUser" extends="base">
		<put-attribute name="title" value="Welcome - Index Page" />
		<put-attribute name="body"
			value="/WEB-INF/views/pages/registerUser/registerUser.jsp" />
	</definition>
	
	<!-- Error Page 404 -->
	<definition name="errorPage404" extends="base">
